<?xml version="1.0" encoding="UTF-8"?>
<serializer>
    <class name="Os2Display\MediaBundle\Entity\Media" exclusion-policy="all"
           xml-root-name="_media">
        <property xml-attribute-map="true" name="id" type="integer"
                  expose="true"
                  since-version="1.0"
                  groups="sonata_api_read,sonata_api_write,sonata_search,api,search,channel,slide,media,screen"/>
        <property name="mediaType" type="string" expose="true"
                  since-version="1.0"
                  groups="api,search,channel,slide,media"/>
        <property name="user" type="integer" expose="true" since-version="1.0"
                  groups="api,search"/>
        <property name="groups" type="array" expose="true" since-version="1.0"
                  groups="api,search"/>
        <virtual-property name="providerMetadata" type="array" expose="true"
                          since-version="1.0"
                          groups="sonata_api_read,sonata_search,api,api-bulk,middleware,sharing,channel,slide,media,screen"
                          method="getProviderMetadata"/>
        <virtual-property name="isInUse" type="boolean" expose="true"
                          since-version="1.0" groups="api"
                          method="getMediaIsInUse"/>
    </class>
</serializer>
